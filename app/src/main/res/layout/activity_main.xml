<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="5dp">


        <Button
            android:id="@+id/btnGenerateRows"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_default"
            android:fontFamily="@font/source_serif_pro"
            android:text="Gen"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtNumberOfUsers"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@android:drawable/editbox_background"
            android:ems="10"
            android:fontFamily="@font/source_serif_pro"
            android:imeOptions="actionDone"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/source_serif_pro"
            android:gravity="center_vertical"
            android:text="Page"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerPage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:popupBackground="@drawable/spinner_popup_bg" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtChosenUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/source_serif_pro"
        android:text="You choose: "
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lvUsers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@drawable/listview_states_selector" />
</LinearLayout>